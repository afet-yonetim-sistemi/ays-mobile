{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@/types/*": ["src/types/*"],
			"@/components/*": ["src/components/*"],
			"@/services/*": ["src/services/*"],
			"@/constants/*": ["src/constants/*"],
			"@/hooks/*": ["src/hooks/*"],
			"@/stores/*": ["src/stores/*"],
			"@/contexts/*": ["src/contexts/*"],
			"@/assets/*": ["assets/*"]
		}
	},
	"include": [
		"**/*.ts",
		"**/*.tsx",
		".expo/types/**/*.ts",
		"expo-env.d.ts",
		"src/constants/Colors.js"
	]
}
